{
  "openapi": "3.0.0",
  "info": {
    "title": "Huddl Creation API",
    "version": "1.0.0",
    "description": "API contract for creating huddlz with new date/time/duration selection"
  },
  "paths": {
    "/api/huddlz": {
      "post": {
        "summary": "Create a new huddl",
        "description": "Create a huddl with separate date, time, and duration inputs",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateHuddlRequest"
              },
              "examples": {
                "simple_event": {
                  "summary": "Simple 2-hour huddl",
                  "value": {
                    "date": "2025-09-29",
                    "start_time": "14:30",
                    "duration_minutes": 120,
                    "name": "Team Standup",
                    "description": "Weekly team sync",
                    "event_type": "virtual",
                    "group_id": "123e4567-e89b-12d3-a456-426614174000"
                  }
                },
                "all_day_event": {
                  "summary": "All-day workshop",
                  "value": {
                    "date": "2025-10-15",
                    "start_time": "09:00",
                    "duration_minutes": 480,
                    "name": "Annual Planning Workshop",
                    "description": "Full day strategic planning",
                    "event_type": "in_person",
                    "location": "Conference Room A",
                    "group_id": "123e4567-e89b-12d3-a456-426614174000"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Huddl created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HuddlResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                },
                "examples": {
                  "past_date": {
                    "summary": "Past date error",
                    "value": {
                      "errors": [
                        {
                          "field": "date",
                          "message": "Date must be today or in the future"
                        }
                      ]
                    }
                  },
                  "invalid_duration": {
                    "summary": "Duration out of range",
                    "value": {
                      "errors": [
                        {
                          "field": "duration_minutes",
                          "message": "Duration must be between 15 and 1440 minutes"
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Not authorized to create huddl in this group",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthorizationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateHuddlRequest": {
        "type": "object",
        "required": ["date", "start_time", "duration_minutes", "name", "group_id", "event_type"],
        "properties": {
          "date": {
            "type": "string",
            "format": "date",
            "description": "Date of the huddl (YYYY-MM-DD)",
            "example": "2025-09-29"
          },
          "start_time": {
            "type": "string",
            "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
            "description": "Start time in 24-hour format (HH:MM)",
            "example": "14:30"
          },
          "duration_minutes": {
            "type": "integer",
            "minimum": 15,
            "maximum": 1440,
            "description": "Duration in minutes",
            "example": 120
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "description": "Name of the huddl"
          },
          "description": {
            "type": "string",
            "description": "Description of the huddl"
          },
          "event_type": {
            "type": "string",
            "enum": ["in_person", "virtual", "hybrid"],
            "description": "Type of event"
          },
          "location": {
            "type": "string",
            "description": "Location for in-person events"
          },
          "virtual_link": {
            "type": "string",
            "format": "uri",
            "description": "Meeting link for virtual events"
          },
          "group_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID of the group hosting the huddl"
          },
          "is_recurring": {
            "type": "boolean",
            "default": false,
            "description": "Whether this is a recurring event"
          },
          "frequency": {
            "type": "string",
            "enum": ["weekly", "monthly"],
            "description": "Recurrence frequency (required if is_recurring is true)"
          },
          "repeat_until": {
            "type": "string",
            "format": "date",
            "description": "End date for recurring events"
          }
        }
      },
      "HuddlResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "starts_at": {
            "type": "string",
            "format": "date-time",
            "description": "Calculated start datetime in UTC"
          },
          "ends_at": {
            "type": "string",
            "format": "date-time",
            "description": "Calculated end datetime in UTC"
          },
          "event_type": {
            "type": "string",
            "enum": ["in_person", "virtual", "hybrid"]
          },
          "location": {
            "type": "string"
          },
          "virtual_link": {
            "type": "string"
          },
          "group_id": {
            "type": "string",
            "format": "uuid"
          },
          "created_by_id": {
            "type": "string",
            "format": "uuid"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ValidationError": {
        "type": "object",
        "properties": {
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field": {
                  "type": "string",
                  "description": "Field that failed validation"
                },
                "message": {
                  "type": "string",
                  "description": "Validation error message"
                }
              }
            }
          }
        }
      },
      "AuthorizationError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Authorization error message"
          }
        }
      }
    }
  }
}